{
    "scopeName": "source.tinylang",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#storage-types"
        },
        {
            "include": "#class-declaration"
        },
        {
            "include": "#inheritance"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#punctuation"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.tinylang",
                    "begin": "//",
                    "end": "(?=$|\\n)",
                    "patterns": [
                        {
                            "name": "punctuation.definition.comment.tinylang",
                            "match": "//"
                        }
                    ]
                },
                {
                    "name": "comment.line.hash.tinylang",
                    "begin": "#",
                    "end": "(?=$|\\n)",
                    "patterns": [
                        {
                            "name": "punctuation.definition.comment.tinylang",
                            "match": "#"
                        }
                    ]
                },
                {
                    "name": "comment.block.tinylang",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "patterns": [
                        {
                            "name": "punctuation.definition.comment.tinylang",
                            "match": "/\\*|\\*/"
                        }
                    ]
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.flow.tinylang",
                    "match": "\\b(if|else|for|while|return|break|continue)\\b"
                },
                {
                    "name": "keyword.control.tinylang",
                    "match": "\\b(ComeAndDo|print|read|input)\\b"
                },
                {
                    "name": "keyword.other.class.tinylang",
                    "match": "\\b(class)\\b"
                },
                {
                    "name": "keyword.other.new.tinylang",
                    "match": "\\b(new)\\b"
                },
                {
                    "name": "variable.language.this.tinylang",
                    "match": "\\b(this)\\b"
                },
                {
                    "name": "variable.language.super.tinylang",
                    "match": "\\b(super)\\b"
                },
                {
                    "name": "keyword.control.import.tinylang",
                    "match": "\\b(import|from)\\b"
                }
            ]
        },
        "storage-types": {
            "patterns": [
                {
                    "name": "storage.type.primitive.tinylang",
                    "match": "\\b(int|float|char|bool|string|void)\\b"
                }
            ]
        },
        "class-declaration": {
            "patterns": [
                {
                    "match": "\\b(class)\\s+([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": { "name": "keyword.other.class.tinylang" },
                        "2": { "name": "entity.name.type.class.tinylang" }
                    }
                }
            ]
        },
        "inheritance": {
            "patterns": [
                {
                    "match": ":\\s*([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": { "name": "entity.other.inherited-class.tinylang" }
                    }
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.tinylang",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "constant.language.null.tinylang",
                    "match": "\\b(null|nullptr)\\b"
                },
                {
                    "name": "constant.numeric.float.tinylang",
                    "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.tinylang",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.tinylang",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.tinylang",
                            "match": "\\\\(n|t|r|\\\\|\"|'|[0-7]{1,3}|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4})"
                        },
                        {
                            "name": "invalid.illegal.unknown-escape.tinylang",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.tinylang",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.tinylang",
                            "match": "\\\\(n|t|r|\\\\|\"|'|[0-7]{1,3}|x[0-9a-fA-F]{2})"
                        },
                        {
                            "name": "invalid.illegal.unknown-escape.tinylang",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.assignment.tinylang",
                    "match": "=(?!=)"
                },
                {
                    "name": "keyword.operator.comparison.tinylang",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.logical.tinylang",
                    "match": "(&&|\\|\\||!)"
                },
                {
                    "name": "keyword.operator.arithmetic.tinylang",
                    "match": "(\\+|\\-|\\*|\\/|%)"
                },
                {
                    "name": "keyword.operator.increment.tinylang",
                    "match": "(\\+\\+|\\-\\-)"
                },
                {
                    "name": "keyword.operator.member-access.tinylang",
                    "match": "\\."
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
                    "captures": {
                        "1": { "name": "entity.name.function.tinylang" }
                    }
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "match": "\\b(int|float|char|bool|string|[A-Z][A-Za-z0-9_]*)\\s+([A-Za-z_][A-Za-z0-9_]*)(?=\\s*[;=\\[])",
                    "captures": {
                        "1": { "name": "storage.type.tinylang" },
                        "2": { "name": "variable.other.declaration.tinylang" }
                    }
                },
                {
                    "name": "variable.other.object.tinylang",
                    "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
                },
                {
                    "name": "variable.other.property.tinylang",
                    "match": "(?<=\\.)\\b[A-Za-z_][A-Za-z0-9_]*\\b"
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.terminator.statement.tinylang",
                    "match": ";"
                },
                {
                    "name": "punctuation.separator.comma.tinylang",
                    "match": ","
                },
                {
                    "name": "punctuation.section.block.begin.tinylang",
                    "match": "\\{"
                },
                {
                    "name": "punctuation.section.block.end.tinylang",
                    "match": "\\}"
                },
                {
                    "name": "punctuation.section.parens.begin.tinylang",
                    "match": "\\("
                },
                {
                    "name": "punctuation.section.parens.end.tinylang",
                    "match": "\\)"
                },
                {
                    "name": "punctuation.section.brackets.begin.tinylang",
                    "match": "\\["
                },
                {
                    "name": "punctuation.section.brackets.end.tinylang",
                    "match": "\\]"
                }
            ]
        }
    },
    "fileTypes": [
        "tl"
    ],
    "foldingStartMarker": "\\{",
    "foldingStopMarker": "\\}"
}
